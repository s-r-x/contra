{
  "name": "contra.js",
  "version": "1.2.0",
  "author": "Ilya Strus <strax1990@gmail.com>",
  "description": "A Swiss army knife for 2D vectors math",
  "main": "./dist/contra.umd.js",
  "module": "./dist/contra.es.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "serve": "vite preview",
    "build": "npm run build.code && npm run build.types",
    "build.types": "tsc -p tsconfig.build.json",
    "build.code": "vite build",
    "lint": "eslint --ext .ts src",
    "lint.strict": "eslint --ext .ts src --max-warnings 0",
    "lint.fix": "eslint --ext .ts --fix src",
    "check-types": "tsc",
    "docs.build": "typedoc src/index.ts --out",
    "docs.watch": "typedoc src/index.ts --watch",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' TS_NODE_TRANSPILE_ONLY=true mocha -r ts-node/register \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/s-r-x/contra"
  },
  "homepage": "https://github.com/s-r-x/contra",
  "bugs": {
    "url": "https://github.com/s-r-x/contra/issues"
  },
  "keywords": [
    "math",
    "vector",
    "2D"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "semantic-release": "^18.0.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4",
    "vite": "^2.6.11"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
